<h1>ウィザード勉強用アプリ</h1>

<% if user_signed_in?%>
  <h2 style= "color: skyblue">ログインしています</h2>
  <h3>ユーザー名: <%= current_user.nickname %></h3>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
<% else %>
  <h2 style= "color: red">ログインしていません</h2>
  <%= link_to "メールアドレスで登録", new_user_registration_path %>
  <%= link_to "ログイン", new_user_session_path %>
<% end %>